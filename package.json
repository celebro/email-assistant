{
    "name": "vrtec",
    "version": "1.0.0",
    "description": "Node / docker service that sends email with full content for every new message on vrtec.easistent.com",
    "repository": {
        "type": "git",
        "url": "git@github.com:celebro/easistent-email.git"
    },
    "type": "module",
    "scripts": {
        "start": "node src/index.js",
        "build": "docker build -t celebro/easistent .",
        "startDocker": "docker run --name=easistentdev --mount type=bind,source=\"$(pwd)\"/data,target=\"/usr/src/app/data\" celebro/easistent",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "immer": "^5.3.2",
        "jsdom": "^15.2.1",
        "node-fetch": "^2.6.0",
        "nodemailer": "^6.4.2"
    },
    "devDependencies": {
        "prettier": "^1.19.1"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    }
}
